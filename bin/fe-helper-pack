#!/usr/bin/env node

'use strict';

var program = require('commander'),
	helpers = require('../index.js'),
	pkg = require('./../package.json');

	program.version(pkg.version)
		.option('--type [type]', 'release type')
		.parse(process.argv);


console.log(program.type);
//helpers.release.test();

if (program.type) {
	helpers.release.performRelease(program.type);
}